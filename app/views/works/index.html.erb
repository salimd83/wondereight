<section id="home" class="page">
  <ul id="portfolio">

    <% if @works.any? %>
      <% if @works.count < 8 %>
        <!-- <h2>Uploading projects soon ;-)</h2> -->
      <% end %>

      <% @works.each_with_index do |work, index| %>

        <li class="<%= work.category %>">
          <div>
            <% if work.workgalleries.any? %>
              <a href="/work/<%= work.title.parameterize %>/<%= work.id %>"
                 data-image="<%= image_path work.photo_over.url(:default) %>">
            <% else %>
              <a data-image="<%= image_path work.photo_over.url(:default) %>">
            <% end %>
              <section>
                <%= image_tag work.photo.url(:default), alt: work.title %>
                <p><span><%= work.caption.html_safe %></span></p>
              </section>
            </a>
          </div>
        </li>

        <% if index == 5 %>
          <li id="showcase">
            <div>
              <h2>Showcase Download</h2>

              <ul>
                <li><a target="_blank" href="/showcase/branding/W8_Branding_Showcase.pdf">Branding.pdf</a></li>
                <li><a target="_blank" href="/showcase/websites/W8_Web_Showcase.pdf">Restaurants.pdf</a></li>
                <li><a target="_blank" href="/showcase/restaurants/W8_Restaurant_Showcase.pdf">Websites.pdf</a></li>
                <li><a target="_blank" href="/showcase/packaging/W8_Packaging_Showcase.pdf">Illustrations.pdf</a></li>
                <li class="last"><a target="_blank" href="/showcase/packaging/W8_Packaging_Showcase.pdf">Packaging.pdf</a></li>
              </ul>
              <section class="clear"></section>
            </div>
          </li>
        <% end %>

      <% end %>
    <% else %>
      <!-- <h2>Uploading projects soon ;-)</h2> -->
    <% end %>
  </ul>
  <div class="imgloader">
    <% @works.each do |work| %>
      <%= image_tag work.photo_over.url(:default), alt: "" %>
    <% end %>
  </div>
  <div class="clear"></div>
</section>
