<% provide(:workMenu, 'selected') %>
<%
  if @cat.blank?
    provide(:title, 'WonderEight: A Global Branding and Interactive Agency')
  else
    provide(:title, @cat+' - WonderEight')
  end
%>
<% provide(:summary, 'We are a Beirut based design agency working for international and local companies who like to challenge their customers and want to be different and daring') %>
<% provide(:image, 'eroom-photo.jpg') %>

<section id="home" class="page">
  <ul id="portfolio">

    <% if @works.any? %>

      <% @works.each_with_index do |work, index| %>

        <li class="<%= work.category %>">
          <div>
            <% if work.workgalleries.any? %>
              <a href="/work/<%= work.title.parameterize %>"
                 data-image="<%= image_path work.photo_over.url(:default) %>">
            <% else %>
              <a data-image="<%= image_path work.photo_over.url(:default) %>">
            <% end %>
              <section>
                <%= image_tag work.photo.url(:default), alt: work.title %>
                <p><span><%= work.caption.html_safe %></span></p>
              </section>
            </a>
          </div>
        </li>

        <% #if index == 1 %>
          <!-- <li class="website">
            <div>
              <section><a href="http://www.wondereight.com/eroom-training" target="_blank"><%=image_tag "BDW.png", alt: "" %></a></section>
              <section class="clear"></section>
            </div>
          </li> -->
        <% #end %>

        <% if index == 6 %>
          <li id="recruit" class="showcase">
            <div>
              <hr>
              <h2>Think you have <br>what it takes?</h2>

              <p>
                Send your portfolio to <br>
                <a href="mailto: jobs@wondereight.com">jobs@wondereight.com</a>
              </p>

              <p class="footer"><span>Web Designer | Graphic Designer</span></p>

              <section class="clear"></section>
            </div>
          </li>
        <% end %>

        <% if index == 5 %>
          <li class="showcase">
            <div>
              <h2>Showcase Download</h2>

              <ul>
                <li><a target="_blank" href="/showcase/branding/W8_Branding_Showcase.pdf">Branding.pdf</a></li>
                <li><a target="_blank" href="/showcase/restaurants/W8_Restaurant_Showcase.pdf">Restaurants.pdf</a></li>
                <li><a target="_blank" href="/showcase/websites/W8_Web_Showcase.pdf">Websites.pdf</a></li>
                <li><a target="_blank" href="/showcase/illustrations/W8_Illustration_Showcase.pdf">Illustrations.pdf</a></li>
                <li class="last"><a target="_blank" href="/showcase/packaging/W8_Packaging_Showcase.pdf">Packaging.pdf</a></li>
              </ul>
              <section class="clear"></section>
            </div>
          </li>
        <% end %>

      <% end %>
    <% end %>
  </ul>
  <div class="imgloader">
    <% @works.each do |work| %>
      <%= image_tag work.photo_over.url(:default), alt: "" %>
    <% end %>
  </div>
  <div class="clear"></div>
</section>
