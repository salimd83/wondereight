<div class="socials">
  <span>Share</span>
  <% url = u(request.protocol + request.host_with_port + request.fullpath) %>
  <%= link_to image_tag("icons/facebook.png", alt: "Facebook"), "http://www.facebook.com/sharer.php?u=#{url}", target: "_blank" %>
  <%= link_to image_tag("icons/twitter.png", alt: "twitter"), "http://twitter.com/share?text=#{title}&url=#{request.protocol}#{request.host_with_port}#{request.fullpath}", target: "_blank" %>
  <%= link_to image_tag("icons/linkedin.png", alt: "twitter"), "http://www.linkedin.com/shareArticle?mini=true&url=#{request.protocol}#{request.host_with_port}#{request.fullpath}&title=#{title}&summary=#{summary}", target: "_blank" %>
  <div class="clear"></div>
</div>
